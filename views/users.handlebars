<h4>Current Users</h4>
<div class="row">
    
    <div class="col s9"> 
        <ul class="userList">
         {{#each user}} 
           <li> 
            <div class="fullName">
                {{firstName}} {{lastName}}
            </div>
            <div class="userHandle">
                {{userName}}
            </div>
           </li>
         {{/each }}
        </ul>
    </div>
    <div class="col s3">
        <a href="#" id="editBtn" class="waves-effect waves-teal btn-flat" type="submit">Edit Users</a>
    </div>
</div>

